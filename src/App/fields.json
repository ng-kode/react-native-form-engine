[
  {
    "template": "Text",
    "customize": {
      "title": "客戶資料",
      "type": "h1"
    }
  },
  {
    "path": "hasAmericanPassport",
    "template": "RadioField",
    "customize": {
      "label": "閣下是否持有美國護照或於美國居住?",
      "options": [
        {"label": "是", "value": true},
        {"label": "否", "value": false}
      ]
    }
  },
  {
    "path": "numFamilyMembers",
    "template": "TextField",
    "customize": {
      "label": "眷屬數目"
    }
  },
  {
    "path": "educationLevel",
    "template": "RadioField",
    "customize": {
      "label": "教育程度",
      "options": [
        {"label": "小學或以下", "value": 1001},
        {"label": "中學", "value": 1002},
        {"label": "大專/大學或以上", "value": 1003},
        {"label": "其他", "value": 1004}
      ]
    }
  },
  {
    "path": "hasInsuranceExp",
    "template": "SwitchField",
    "customize": {
      "label": "保險知識與經驗?"
    }
  },
  {
    "path": "sourceOfInsuranceKnowledge",
    "template": "MultipleCheckboxes",
    "showOnlyWhen": {
      "hasInsuranceExp": {
        "presence": true,
        "inclusion": [true]
      }
    },
    "customize": {
      "label": "閣下的保險知識和資訊是從 (可選一項或以上):",
      "hasBorder": true,
      "options": [
        {"label": "曾聽取保險顧問之說明", "value": 1001},
        {"label": "現在或曾經持有保單", "value": 1002},
        {"label": "保險專業培訓", "value": 1003},
        {"label": "其他(例如新聞 / 研討會/ 個人資料搜集)", "value": 1004}
      ]
    }
  }
]
